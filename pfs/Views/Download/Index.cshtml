@{
    ViewData["Title"] = "Download";
}

@model AuthenticationResult

@if (Model.Files.Count == 0)
{
    <header id="header" class="ex-2-header">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <h1>Authentication</h1>
                    <!-- Sign Up Form -->
                    <div class="form-container">
                        <form asp-controller="Download" asp-action="Index" method="POST" data-toggle="validator" data-focus="false">
                            <div class="form-group">
                                <input class="form-control-input" asp-for="Password" id="my-password">
                                <label class="label-control" for="lpassword">Password</label>
                                <div class="help-block with-errors"></div>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control-submit-button">LOG IN</button>
                            </div>
                            @*<div class="form-message">
                        <div asp-validation-summary="All" id="lmsgSubmit" class="h3 text-center hidden"></div>
                        </div>*@
                        </form>
                    </div> <!-- end of form container -->
                    <!-- end of sign up form -->
                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </header> <!-- end of ex-header -->
}
else
{
    <!-- Header -->
    <header id="header" class="ex-header">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h1>Download Files<small style="font-size:initial;"> with FileIO</small></h1>
                </div> <!-- end of col -->
            </div> <!-- end of row -->
        </div> <!-- end of container -->
    </header> <!-- end of ex-header -->
    <!-- end of header -->
    <!-- Privacy Content -->
    <div class="ex-basic-2">
        <div class="container my-5">
            <div class="col-lg-9 m-auto">
                <h4 class="ml-4">You can download your files</h4>
                @if (Model.Files.Count < 1)
                {
                    <p class="ml-4">There is No File :(</p>
                }
                else
                {
                    <div class="form-container">
                        <div class="table-responsive">
                            <table class="table align-middle">
                                <thead>
                                    <tr>
                                        <th scope="col">Name</th>
                                        <th scope="col">Operations</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var file in Model.Files)
                                    {
                                        <tr>
                                            <td>@file.FileName</td>
                                            <td>
                                                <div class="">
                                                    <button class="btn btn-success mr-2 op-buttons">@Html.ActionLink("Download", "DownloadFile", new { fileName = file.FileName })</button>
                                                    <button class="btn btn-danger op-buttons">@Html.ActionLink("Delete", "DeleteFile", new { fileName = file.FileName })</button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div> <!-- end of form container -->
                }
            </div> <!-- end of col -->
        </div> <!-- end of container -->
    </div> <!-- end of ex-basic-2 -->
    <!-- end of privacy content -->
}



<script src="https://kit.fontawesome.com/c0078485ae.js" crossorigin="anonymous"></script>

